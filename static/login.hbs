<div>
    <h1>LogIn for the work</h1>
    <form action="/login" method="post">
        <input type="text" name="email" placeholder="Email...">
        <input type="password" name="password" placeholder="Pasword...">
        <input type="submit" value="LogIn">
    </form>
</div>
<div>
    <p>Підказка:</p>
<p>
    {{#each users}}
        {{this.email}} --
        {{this.password}}
        <hr/>
    {{/each}}
    </p>
</div>

</body>
